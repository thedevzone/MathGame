<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MathQuiz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="BaseButton">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="BaseTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BaseTextView.Question">
        <item name="android:layout_width">@dimen/_55sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_question</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_30ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="BaseTextView.Title">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="BaseTextView.Answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_answer</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_30ssp</item>
        <item name="android:minWidth">@dimen/_55sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="BaseTextView.Label">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/black</item>
    </style>

</resources>